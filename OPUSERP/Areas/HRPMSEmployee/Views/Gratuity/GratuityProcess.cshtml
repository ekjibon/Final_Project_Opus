@model GratuityViewModel

@{
    ViewData["Title"] = "Gratuity Process";
    Layout = "~/Areas/HRPMSEmployee/Views/Shared/_EmployeeForm.cshtml";
}

@section StyleEmp{
    <style>
        .redStar {
            color: red;
        }
    </style>
}

    <div class="card" style="width: 100%;">
        <div class="card-body">
            <div class="row">
                <div class="col-8">
                    <h5 class="card-title" style="color: black">Gratuity Process</h5>
                </div>
                @*<div class="col-4">
                    <a href='/HRPMSEmployee/Photograph/EditGrid/@Model.employeeID' style="text-decoration:none;"><h6 class="identity-box">@Model.employeeNameCode</h6></a>
                </div>*@
            </div>
            <hr>
            <div class="container">
                <form asp-area="HRPMSEmployee" asp-controller="Gratuity" asp-action="GratuityProcess" method="post" data-parsley-validate="parsley">

                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group row">
                                <label for="sbuName" class="col-sm-4 col-form-label">SBU Name <span class="redStar">*</span></label>
                                <div class="col-sm-8">
                                    <select class="form-control" data-parsley-required="true" name="sbuId" id="sbuId">
                                        <option value="">Select</option>
                                        @foreach (var data in Model.branches)
                                        {
                                            <option value="@data.Id">@data.branchUnitName</option>
                                        }
                                    </select>
                                    <input type="hidden" name="Id" id="Id" value="0" />
                                </div>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="form-group row">
                                <label for="date" class="col-sm-3 col-form-label">Date<span class="redStar">*</span></label>
                                <div class="col-sm-7">
                                    <input type="text" class="form-control" id="date" value="" name="date" data-parsley-required="true" autocomplete="off">
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" value="Submit" class="btn btn-success btn-lg" style="float:right; margin-top:5px;"><i class="fas fa-procedures"></i>Process</button>

                    @*<hr />*@


                </form>
            </div>
        </div>
    </div>

<br />
@*<hr />*@
<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            @*<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold"></h6>
                </div>*@
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="extraFeeItemTable">
                    <thead>
                        <tr>
                            <th>Emp Name</th>
                            <th>Designation</th>
                            <th>Joining Date</th>
                            <th>Basic</th>
                            <th>Cutoff Date</th>
                            <th>Days</th>
                            <th>Years</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section ScriptsEmp{
    <script>
        $(document).ready(function () {

            $("#award").addClass("active");
            $('#date').datepicker({ uiLibrary: 'bootstrap4' });
            $('#awardTable').DataTable();
        });
     

    </script>
}

