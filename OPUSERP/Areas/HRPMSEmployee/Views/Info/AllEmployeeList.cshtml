                //    { data: "designation" },
                //    { data: "mobileNumberOffice" },
                //    { data: "emailAddress" },
                //    { data: "action" }
                //],
                stateSave: true,
                dom: "<'row'<'col-sm-12 col-md-2'l><'col-sm-12 col-md-3'B><'col-sm-12 col-md-7'f>>" +
                    "<'row'<'col-sm-12't>>" + "<'row'<'col-sm-12 col-md-6'i><'col-sm-12 col-md-6'pr>>",
                buttons: [
                    {
                        extend: 'excelHtml5',
                        text: '<i class="fa fa-file-excel"></i> Excel',
                        titleAttr: 'Excel',
                        exportOptions: {
                            columns: [1, 2, 3, 4, 5]
                        },
                        title: "@Model.allEmployeeJsons.FirstOrDefault().companies",
                        messageTop: 'List Of Employee',
                        class: 'btn btn-info'
                    },
                    {
                        extend: 'csvHtml5',
                        text: '<i class="fa fa-file-excel"></i> CSV',
                        titleAttr: 'CSV',
                        exportOptions: {
                            columns: [1, 2, 3, 4, 5]
                        },
                        title: "@Model.allEmployeeJsons.FirstOrDefault().companies",
                        messageTop: 'List Of Employee'
                    },
                    {
                        extend: 'print',
                        text: '<i class="fa fa-print"></i> Print',
                        titleAttr: 'Print',
                        title: "@Model.allEmployeeJsons.FirstOrDefault().companies",
                        messageTop: 'List Of Employee',
                        exportOptions: {
                            columns: [1, 2, 3, 4, 5]
                        },
                        customize: function (doc) {
                            $(doc.document.body).find('h1').css('font-size', '20pt');
                            $(doc.document.body).find('h1').css('font-family', "'Times New Roman', Times, serif");
                            $(doc.document.body).find('h1').css('text-align', 'center');
                        }
                    }
                ]
            });


            $("#empStatus").change(function () {
                if ($("#empStatus").val() != "") {
                    var status = $("#empStatus").val();
                    table.ajax.url("/global/api/allEmployeeList/" + status).load();
                }
            });
        });


    </script>
}