
@model HRManualViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/HRPMSEmployee/Views/Shared/_EmployeeForm.cshtml";
}

@section StyleEmp{
    <style>
        .redStar {
            color: red;
        }
    </style>
}
<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">HR Manual Attachment List</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="hrManualListTable">
                    <thead>
                        <tr>
                            <th>Attachment Category Name</th>
                            <th>Attachment Name</th>
                            <th>Action</th>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.hRManualAttachments)
                        {
                            <tr>
                                <td>@data.fileTitle</td>
                                <td>@data.fileUrl</td>
                                <td>
                                    <a class="btn btn-success" href="~/@data.fileUrl" target="_blank"><i class="fa fa-download"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section ScriptsEmp{
    <script>
        $(document).ready(function () {
            $('#hrManualListTable').DataTable();
        });
    </script>
}


