@model ChildrenViewModel

@{
    ViewData["Title"] = "Children Information";
    Layout = "~/Areas/HRPMSEmployee/Views/Shared/_EmployeeForm.cshtml";
}

@section StyleEmp{
    <style>
        .redStar {
            color: red;
        }
    </style>
}

<div class="card" style="width: 100%;">
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <h6 style="background-color:red;color:white;border-radius:5px 5px 0px 0px;text-align:left;margin-left:-12px;margin-right:-12px;" class="identity-box">@Model.employeeNameCode</h6>
            </div>
        </div>
        <div class="row">
            <div class="col-2" style="border:1px solid gray;">
                <img id="user_img_current" style="width: 120px;height: 95px;border-radius: 120px;" src="~/@Model.photograph?.url" alt="" class="img-thumbnail float-left">
            </div>
            <div class="col-10" style="border:1px solid gray;color: black; font-size: 15px; padding-top: 12px;">
                <div class="form-group row">
                    <div class="col-7">
                        <span>Employee Name :</span> <span style="margin-left:10px">@Model.employeeInfo?.nameEnglish</span><br />
                        <span>Designation :</span> <span style="margin-left:10px">@Model.employeeInfo?.designation</span><br />
                        <span>Department :</span> <span style="margin-left:10px">@Model.employeeInfo?.department.deptName</span>
                    </div>
                    <div class="col-5">
                        <span>Joining Date :</span><span style="margin-left:10px">@Model.employeeInfo?.joiningDateGovtService</span><br />
                        <span>Job Nature :</span><span style="margin-left:10px">@Model.employeeInfo?.employeeType?.empType</span><br />
                        <span>Job Status :</span><span style="margin-left:10px">@(Model.employeeInfo?.activityStatus == 1 ? "Active" : "Inactive")</span>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div>
                <h5><u style="">@Model.fLang.title</u></h5>
            </div>
        </div>
        <hr>
        <div class="container">
            <form asp-area="HRPMSEmployee" asp-controller="Children" asp-action="Index" method="post" data-parsley-validate="parsley">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row">
                    <label for="childName" class="col-sm-3 col-form-label">@Model.fLang.childName <span class="redStar">*</span></label>
                    <div class="col-sm-9">
                        <input data-parsley-trigger="keyup" type="text" class="form-control" id="childName" value="" name="childName" data-parsley-required="true">
                        <input type="hidden" id="employeeID" name="employeeID" value="@Model.employeeID">
                        <input type="hidden" id="childrenID" name="childrenID" value="0">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="childNameBN" class="col-sm-3 col-form-label">@Model.fLang.childNameBN</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="childNameBN" value="" name="childNameBN">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="dateOfBirth" class="col-sm-3 col-form-label">@Model.fLang.dateOfBirth <span class="redStar">*</span></label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="dateOfBirth" value="" name="dateOfBirth" data-parsley-required="true" autocomplete="off">
                    </div>
                </div>

                <div class="form-group row" style="display:none;">
                    <label for="education" class="col-sm-3 col-form-label">@Model.fLang.education</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="educations" value="" name="education">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="gender" class="col-sm-3 col-form-label">@Model.fLang.gender</label>
                    <div class="col-sm-9">
                        <select class="form-control" name="gender" id="gender">
                            <option>Male</option>
                            <option>Female</option>
                            <option>Others</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="occupation" class="col-sm-3 col-form-label">@Model.fLang.occupation</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="occupation" value="" name="occupation">
                    </div>
                </div>

                <div class="form-group row" style="display:none;">
                    <label for="designation" class="col-sm-3 col-form-label">@Model.fLang.designation</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="designation" value="" name="designation">
                    </div>
                </div>

                <div class="form-group row" style="display:none;">
                    <label for="organization" class="col-sm-3 col-form-label">@Model.fLang.organization</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="organization" value="" name="organization">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="bin" class="col-sm-3 col-form-label">@Model.fLang.bin </label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="bin" value="" name="bin">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="nid" class="col-sm-3 col-form-label">@Model.fLang.nid </label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="nid" value="" name="nid">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="bloodGroup" class="col-sm-3 col-form-label">@Model.fLang.bloodGroup</label>
                    <div class="col-sm-9">
                        <select class="form-control" name="bloodGroup" id="bloodGroup">
                            <option value="">Select</option>
                            <option value="O-">O-</option>
                            <option value="O+">O+</option>
                            <option value="A-">A-</option>
                            <option value="A+">A+</option>
                            <option value="B-">B-</option>
                            <option value="B+">B+</option>
                            <option value="AB-">AB-</option>
                            <option value="AB+">AB+</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="disability" class="col-sm-3 col-form-label">@Model.fLang.disability</label>
                    <div class="col-sm-9">
                        <select class="form-control" id="disability" name="disability" data-parsley-required="true">
                            <option value="0">No</option>
                            <option value="1">Yes</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="disablityType" class="col-sm-3 col-form-label">@Model.fLang.disablityType</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="disablityType" value="" name="disablityType" readonly>
                    </div>
                </div>

                <hr>
                <button type="submit" value="Submit" class="btn btn-success btn-lg" style="float:right; margin-top:5px;"><i class="fas fa-save"></i></button>

            </form>
        </div>
    </div>
</div>

<br />
<hr />
<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold">@Model.fLang.title</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="childrenTable">
                    <thead>
                        <tr>
                            <th>@Model.fLang.childName</th>
                            <th>@Model.fLang.dateOfBirth</th>
                            <th>@Model.fLang.gender</th>
                            <th>@Model.fLang.bloodGroup</th>
                            <th>@Model.fLang.action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.children)
                        {
                            <tr>
                                <td>@data.childName</td>
                                <td>@data.dateOfBirth?.ToString("dd-MMM-yyyy")</td>
                                <td>@data.gender</td>
                                <td>@data.bloodGroup</td>
                                <td>
                                    <a class="btn btn-success" onclick="Edit(@data.Id,'@data.childName','@data.employeeId','@data.childNameBN','@data.dateOfBirth?.ToString("dd-MMM-yyyy")','@data.education','@data.gender','@data.occupation','@data.designation','@data.organization','@data.bin','@data.nid','@data.bloodGroup','@data.disability','@data.disablityType')" href="#"><i class="fa fa-edit"></i></a>
                                    <a class="btn btn-danger" onclick="Remove(@data.Id,@data.employeeId)" href="#"><i class="fa fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section ScriptsEmp{
    <script>
        $(document).ready(function () {
            $("#children").addClass("active");
            $('#dateOfBirth').datepicker({ dateFormat: "dd-M-yy", showAnim: "scale", changeMonth: true, changeYear: true, yearRange: "1940:2030" });
            $('#childrenTable').DataTable();

            $("#disability").change(function () {
                if ($("#disability").val() == '1') {
                    $("#disablityType").attr('readonly', false);
                }
                else {
                    $("#disablityType").attr('readonly', true);
                    $("#disablityType").val('');
                }
            });

        });

        function Edit(Id, childName, employeeId, childNameBN, dateOfBirth, education, gender, occupation, designation, organization, bin, nid, bloodGroup, disability, disablityType) {
            $('#employeeID').val(employeeId);
            $('#childrenID').val(Id);
            $('#childName').val(childName);
            $('#childNameBN').val(childNameBN);
            $('#dateOfBirth').val(dateOfBirth);
            $('#educations').val(education);
            $('#gender').val(gender);
            $('#occupation').val(occupation);
            $('#designation').val(designation);
            $('#organization').val(organization);
            $('#bin').val(bin);
            $('#nid').val(nid);
            $('#bloodGroup').val(bloodGroup);
            $('#disability').val(disability);
            $('#disablityType').val(disablityType);
            if ($("#disability").val() == '1') {
                $("#disablityType").attr('readonly', false);
            }
            else {
                $("#disablityType").attr('readonly', true);
                $("#disablityType").val('');
            }
        }

        function Remove(Id, employeeId) {
            chk = confirm('Do you want to delete this?');
            if (chk) {
                //return true;
                location.replace("/HRPMSEmployee/Children/Delete/" + Id + "?empId=" + employeeId);
            } else {
                return false;
            }
        }

    </script>
}


