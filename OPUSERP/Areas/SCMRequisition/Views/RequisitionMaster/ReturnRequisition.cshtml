@model RequisitionViewModel
@{
    ViewData["Title"] = "Returned PR";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->

            <div class="row">
                <div class="col-md-10">
                    <h6 class="m-0 font-weight-bold text-primary">List of Returned Requisition</h6>
                </div>
                
            </div>

            <hr />
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="requisitionListTable">
                    <thead>
                        <tr>
                            <th>@Model.fLang.reqNo</th>
                            <th>@Model.fLang.reqDate</th>
                            <th>@Model.fLang.subject</th>
                            <th>@Model.fLang.reqType</th>
                            <th>@Model.fLang.action</th>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.requisitionMaster)
                        {
                            <tr>
                                <td>@data.reqNo</td>
                                <td>@data.reqDate?.ToString("dd-MMM-yyyy")</td>
                                <td>@data.subject</td>
                                <td>@data.reqType</td>
                                <td>                                  
                                        <a class="btn btn-success" title="Edit" href="/SCMRequisition/RequisitionMaster/CreateRequisition/?Id=@data.Id"><i class="fa fa-edit"></i></a>
                                        <a class="btn btn-info" title="Print PR" target='_blank' href="/Report/ReportMaster/PurchaseRequisitionPdf/?reqId=@data.Id"><i class='fa fa-print'></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#requisitionListTable').DataTable();
        });
    </script>
}


