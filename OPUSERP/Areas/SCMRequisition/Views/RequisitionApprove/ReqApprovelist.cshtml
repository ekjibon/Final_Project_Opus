@model ApprovalLogViewModel
@{
    ViewData["Title"] = "ReqApprovelist";
    //Layout = "~/Areas/Requisition/Views/Shared/_RequisitionLayout.cshtml";
}

<div class="row clearfix">
    <div class="col-12">
        <div class="card mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">@Model.fLang.title</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <table class="table table-striped table-bordered" id="educationalTable">
                    <thead>
                        <tr>
                            <th>Sl No#</th>
                            <th>Project</th>
                            <th>@Model.fLang.reqNo</th>
                            <th>@Model.fLang.reqDate</th>
                            <th>@Model.fLang.bracsubject</th>
                            <th>@Model.fLang.reqDept</th>
                            <th>@Model.fLang.action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int slno = 0;

                            @foreach (var data in Model.getRequisitionListForApprovedViewModels)
                            {
                                slno = slno + 1;
                                <tr>
                                    <td>@slno</td>
                                    <td>@data.projectName</td>
                                    <td>@data.reqNo</td>
                                    <td>@data.reqDate?.ToString("dd-MMM-yyyy")</td>
                                    <td>@data.subject</td>
                                    <td>@data.reqDept</td>
                                    <td>
                                        <a class="btn btn-success" href="@Url.Action("RequisitionApprove", "RequisitionApprove", new { id = data.Id })"><i class="fa fa-edit"></i></a>
                                    </td>
                                </tr>
                            }

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#education").addClass("active");
            $('#educationalTable').DataTable();
        });
    </script>
}















