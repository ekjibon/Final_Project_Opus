@model IOUViewModel
@{
    ViewData["Title"] = "IOU APPROVE List";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header" style="padding:6px 0px 5px 3px;">
                <label style="padding:0px 0px 0px 10px;font-size:16px;font-weight:600" class="col-sm-10 pull-left"><i class="fa fa-th-list fa-sm"></i>&nbsp;&nbsp; IOU APPROVE LIST</label>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered" id="requisitionListTable">
                    <thead>
                        <tr>
                            <th>IOU Date</th>
                            <th>IOU No</th>
                            <th>Delivery Date</th>
                            <th>IOU Value</th>
                            @*<th>PR. No.</th>*@
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.iOUMasters)
                        {
                            <tr>
                                <td>@data.iouDate?.ToString("dd-MMM-yyyy")</td>
                                <td>@data.iouNo</td>
                                <td>@data.expectedDeliveryDate?.ToString("dd-MMM-yyyy")</td>
                                <td>@data.iouValue?.ToString("0.00")</td>
                                @*<td>@data.requisition.reqNo</td>*@
                                <td>@data.iouCurrentStatus</td>
                                <td>
                                    <a class="btn btn-info" href="/SCMIOU/IOU/IOUApprove?iouMasterId=@data.Id"><i class="fa fa-cogs"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#requisitionListTable').DataTable();
        });
    </script>
}

